#include <bits/stdc++.h>

#include <iostream>
#include <algorithm>

using namespace std;
void reverse(int arr[], int size){
    int s=0;
    int e=size-1;
    while(s<=e){
        swap(arr[s],arr[e]);
        s++;
        e--;
    }
    for(int i=0;i<size;i++){
        cout<<arr[i]<<" ";
    }
}

int main()
{
    int arr[]={1,2,3,4,5};
    reverse(arr,5);
    

    return 0;
}
